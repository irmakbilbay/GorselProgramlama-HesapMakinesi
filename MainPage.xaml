<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="onaltimart.MainPage"
             Title="Standart Hesap Makinesi">
    <VerticalStackLayout Padding="20" VerticalOptions="Center" >

        <Entry x:Name="Display" IsReadOnly="True" FontSize="30" HorizontalTextAlignment="End" Margin="0,15" />
        <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="5" RowSpacing="5">
            <Button Text="mod" Grid.Row="0" Grid.Column="0" Clicked="OnOperationClicked"/>
            <Button Text="CE" Grid.Row="0" Grid.Column="1" Clicked="OnClearEntryClicked"/>
            <Button Text="C" Grid.Row="0" Grid.Column="2" Clicked="OnClearClicked"/>
            <Button Text="⌫" Grid.Row="0" Grid.Column="3" Clicked="OnBackspaceClicked"/>

            <Button Text="7" Grid.Row="1" Grid.Column="0" Clicked="OnNumberClicked"/>
            <Button Text="8" Grid.Row="1" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="9" Grid.Row="1" Grid.Column="2" Clicked="OnNumberClicked"/>
            <Button Text="/" Grid.Row="1" Grid.Column="3" Clicked="OnOperationClicked"/>

            <Button Text="4" Grid.Row="2" Grid.Column="0" Clicked="OnNumberClicked"/>
            <Button Text="5" Grid.Row="2" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="6" Grid.Row="2" Grid.Column="2" Clicked="OnNumberClicked"/>
            <Button Text="*" Grid.Row="2" Grid.Column="3" Clicked="OnOperationClicked"/>

            <Button Text="1" Grid.Row="3" Grid.Column="0" Clicked="OnNumberClicked"/>
            <Button Text="2" Grid.Row="3" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="3" Grid.Row="3" Grid.Column="2" Clicked="OnNumberClicked"/>
            <Button Text="-" Grid.Row="3" Grid.Column="3" Clicked="OnOperationClicked"/>

            <Button Text="+/-" Grid.Row="4" Grid.Column="0" Clicked="OnChangeSignClicked"/>
            <Button Text="0" Grid.Row="4" Grid.Column="1" Clicked="OnNumberClicked"/>
            <Button Text="=" Grid.Row="4" Grid.Column="2" Clicked="OnEqualsClicked"/>
            <Button Text="+" Grid.Row="4" Grid.Column="3" Clicked="OnOperationClicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>

